<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.aik_master.indianconverter.indiannumberingconverter.MainActivity$ToIndianFragment">

    <EditText
        android:id="@+id/value_to_convert_to_indian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/label_to_indian_value"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/label_to_indian_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/value_to_convert_to_indian"
        android:layout_alignBottom="@+id/value_to_convert_to_indian"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/label_value"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- TODO: autoscale result https://developer.android.com/preview/features/autosizing-textview.html -->

    <TextView
        android:id="@+id/label_to_indian_indian_numbering"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/value_to_convert_to_indian"
        android:layout_marginTop="63dp"
        android:text="@string/label_indian_numbering"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result_to_indian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/label_to_indian_indian_numbering"
        android:textSize="28sp" />

</RelativeLayout>
